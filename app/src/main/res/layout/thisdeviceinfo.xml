<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#e6e6e6"

    android:layout_height="wrap_content"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/showing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e6e6e6"
            android:clickable="true"
            android:focusable="true"
            android:foregroundGravity="center_vertical"
            android:padding="10sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include layout="@layout/appbar3"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/tool1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"


                />
            <androidx.cardview.widget.CardView
                android:id="@+id/cardd"
                android:layout_width="232sp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20sp"
                android:layout_margin="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@id/cardadress"
                app:layout_constraintTop_toBottomOf="@+id/tool1" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:padding="5sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:foregroundGravity="center_vertical"
                        android:padding="5sp"

                        android:text="Employees can set their available status from here."

                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/model"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:foregroundGravity="center_vertical"
                        android:gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textSize="14sp"
                        android:text="If Available status ON then, Admin and other employees can see your live location all the time and Admin also get every location history of yours. If Available status OFF then nobody can see you and admin don't get any new history of yours"
                        android:textStyle="bold"
                        android:padding="10sp"
                        app:layout_constraintBottom_toTopOf="@+id/switchtrack"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"

                        app:layout_constraintTop_toBottomOf="@+id/textView" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchtrack"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
android:padding="10sp"
                        android:layout_margin="10sp"
                        android:foregroundGravity="center_vertical"
                        android:gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:text="Available Status"
                        android:checked="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/model"
                        app:layout_constraintVertical_bias="1.0" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="90sp"
                android:layout_height="match_parent"
                app:cardCornerRadius="30sp"
                android:id="@+id/cardadress"
              android:layout_margin="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toBottomOf="@+id/tool1">

                <ImageView
                    android:id="@+id/placename"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cardview_light_background"
                    android:padding="8sp"
                    android:scrollbarStyle="insideInset"

                  android:src="@drawable/employee"




                    tools:layout_editor_absoluteX="11dp"
                    tools:layout_editor_absoluteY="10dp" />
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>